<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF" >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Google map marker"
        android:id="@+id/textView2"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/red" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LatLng"
        android:id="@+id/textViewInfoWinLatLng"
        android:layout_below="@+id/textViewInfoWinUserComment"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:id="@+id/textViewInfoWinAddr"
        android:layout_below="@+id/textViewInfoWinLatLng"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/textViewInfoWinStar"
        android:layout_below="@+id/textViewInfoWinAddr"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewChatMsg"
        android:layout_below="@+id/textViewInfoWinStar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="64px"
        android:layout_height="64px"
        android:id="@+id/imageView4"
        android:src="@drawable/img_loging_page"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User comment - marked by"
        android:id="@+id/textViewInfoWinUserComment"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />


</RelativeLayout>